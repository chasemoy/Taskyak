<div class="container tasklist">
	<div class="text-center">
		<h1 class = "taskHeader">Your Tasks Portfolio</h1>
	</div>
  
	{{#easy-dropdown elementId='dropdown-test' classNames='nav-bar-dp'}}
	{{#each model key ="userId" as |taskforminput|}}

	<div class="row panel">
		<div class="panel-title text-center">
				<h2> Task {{taskforminput.number}}: </h2> 
		</div>
			
		<div class="col-sm-12 text-center">
			
			<div class="panel-body">
				<div><b> Title:</b> {{taskforminput.title}} </div>
				<div><b>Finish Date: </b>{{taskforminput.date}}</div>
				<div><b>Task Description:</b></div>
				<div>{{taskforminput.body}}</div>
				<button class="btn btn-outline-danger">Delete Task</button>
			</div>
			
		</div>
	</div>
	
	{{/each}}
	{{/easy-dropdown}}
	
</div>




