<body>
	<nav class = "navbar navbar-dark navbar-expand-md fixed-top Nav">
		{{#link-to 'index' class = "nav-item goHomeButton"}}
			Student Tracker 
		{{/link-to}} 
	</nav>
	
	<div class = "container">
		<form id = "signInForm">
			<legend style = "text-align: center; color: #555555;"> Login </legend> 
		
			<div class="form-group">
				<label for="exampleInputEmail1">Email address</label>
				{{input type="email" value=email class="form-control" placeholder="e-mail address" autofocus="autofocus"}}
			</div>

			<div class="form-group">
				<label for="exampleInputPassword1">Password</label>
				{{input type="password" value=password class="form-control" placeholder="password" autofocus="autofocus"}}
			</div>
		
			<button type = "submit" class="btn btn-primary" {{action 'sendLogin' "password"}} disabled={{isDisabled}}>
				Sign In
			</button>
				
			{{#if responseMessage}}
				<div class="alert alert-success">{{responseMessage}}</div>
			{{/if}}
		
		</form>
	</div>
</body>